<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/t_souvenir_list_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/t_souvenir_received_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Received Date"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/t_souvenir_received_by"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Received By"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />


        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/image_t_souvenir_option"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/icon_burger" />

</LinearLayout>