<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/souvenir_list_code"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Code"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/souvenir_list_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/souvenir_list_quantity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />

        <TextView
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/souvenir_list_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="@color/colorBlack"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/image_souvenir_option"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_burger" />

</LinearLayout>